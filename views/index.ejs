<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Moment 2</title>
  </head>
  <body>
    <h1>Arbetserfarenheter</h1>
    <h2>Tidigare anställningar</h2>
    <ul id="user-list"></ul>
    <script>
      function formatDate(dateString) {
        if (!dateString) return "pågår";
        const d = new Date(dateString);
        if (isNaN(d)) return dateString; // fallback om datumet inte kan tolkas
        return d.toLocaleDateString("sv-SE");
      }

      getData();
      async function getData() {
        const response = await fetch(
          "https://dt207g-moment2-1-ph2b.onrender.com/api/users"
        );
        const data = await response.json();
        const list = document.getElementById("user-list");
        list.innerHTML = "";
        data.forEach((user) => {
          const li = document.createElement("li");
          // Formatera datum till svenska format (YYYY-MM-DD)
          const formatDate = (dateString) => {
            if (!dateString) return "pågår";
            const date = new Date(dateString);
            return date.toISOString().split("T")[0]; // Tar bara datum-delen
          };

          const startDate = formatDate(user.startdate);
          const endDate = formatDate(user.enddate);

          li.textContent = `${user.companyname} – ${user.jobtitle} (${startDate} till ${endDate})`;
          list.appendChild(li);
        });
      }
    </script>
  </body>
</html>
